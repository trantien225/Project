@model List<Project.Models.Product>
@{
    ViewBag.Title = "Home";
}
<div class="container">
    <!-- slide show -->
    <div class="row">
        @{
            ViewBag.Slides = ViewBag.Slides;
            ViewBag.Cout = ViewBag.Cout;
            Html.RenderPartial("Slide");
        }
    </div>
    <!-- end slide show -->
    <div class="product">
        <div class="container">
            <div class="product_popular">
                <h3 class="product__popular title-product">Sản phẩm nổi bật</h3>
                <div class="row">
                    @foreach (var item in Model)
                    {
                        if (item.IsHot == true)
                        {
                            <div class="col-lg-6 col-sm-12 mb-20">
                                <div class="card" style="width: 100%;">
                                    <img class="card-img-top" src="~/assets/img/product/@item.ImgeMain" alt="Card image" style="width:100%">
                                    <div class="card-body" style="color:blue">
                                        <h4 class="card-title">@item.Name</h4>
                                        <p class="card-text custom__name-product" style="font-weight: 400;">
                                        </p>
                                        <a href="/products/detail/@item.ProductId" title="@item.Name" class="btn btn-buynow">
                                            Xem ngay <i class="fas fa-arrow-right"
                                                        style="font-size: 16px;margin-left: 5px"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    }

                </div>
            </div>
            <div class="product__new">
                <h3 class="product__ne title-product">Sản phẩm đặt sắc</h3>
                <div class="row">
                    @foreach (var item in Model)
                    {
                        
                        if (item.Featured)
                        {
                    <div class="col-lg-3 col-md-6 col-sm-12">
                        @{
                            Html.RenderAction("DisPlaySingleProduct", "Products", new { p = item });
                        }
                    </div>
                        }
                    }
                </div>

            </div>
        </div>
        <div class="shoesnews">
            <div class="container">
                <h3 class="shoesnews__title">Tin tức</h3>
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-12 mb-20">
                        <a class="product__new-item">
                            <div class="card" style="width: 100%">
                                <img class="card-img-top" src="~/assets/img/product/AKID0069-02.jpg" alt="Card image cap" height="230px">
                                <div class="card-body">
                                    <h5 class="card-title custom__name-product title-news">
                                        Samsung Galaxy S24 có gì mới? Giá bao nhiêu, khi nào ra mắt?
                                    </h5>
                                    <p class="card-text custom__name-product" style="font-weight: 400;color:blue">
                                        Năm 2024, dòng Samsung Galaxy S24 dự kiến sẽ được ra mắt với 3 phiên bản Galaxy S24, Galaxy S24 Plus và Galaxy S24 Ultra.
                                        Mỗi model đều có những ưu điểm riêng để thuyết phục người dùng chọn mua.
                                    </p>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12 mb-20">
                        <a class="product__new-item">
                            <div class="card" style="width: 100%">
                                <img class="card-img-top" src="~/assets/img/samsung.jpg" alt="Card image cap" height="230px">
                                <div class="card-body">
                                    <h5 class="card-title custom__name-product title-news">
                                        Người sáng lập SamSung
                                    </h5>
                                    <p class="card-text custom__name-product" style="font-weight: 400;color:blue">
                                        Samsung là một công ty đa quốc gia có trụ sở chính tại Hàn Quốc.
                                        Công ty được thành lập vào ngày 1 tháng 3 năm 1938 bởi Lee Byung-chul.
                                        Ban đầu, Samsung hoạt động như một công ty thương mại xuất nhập khẩu và sau đó mở rộng sang nhiều lĩnh vực khác nhau như thực phẩm chế biến, dược phẩm, bảo hiểm và điện tử.
                                    </p>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12 mb-20">
                        <a class="product__new-item">
                            <div class="card" style="width: 100%">
                                <img class="card-img-top" src="~/assets/img/WWDC22.jpg" alt="Card image cap" height="230px">
                                <div class="card-body">
                                    <h5 class="card-title custom__name-product title-news">
                                        Cập nhật sự kiện công nghệ nổi bật trong nước và Quốc tế
                                    </h5>
                                    <p class="card-text custom__name-product" style="font-weight: 400;color:blue">
                                        Sự kiện WWDC22
                                        Lần này, sự kiện WWDC22 sẽ diễn ra từ ngày mùng 6 đến ngày mùng 10 tháng 6.
                                        Tại đây Apple sẽ công bố các hệ điều hành phần mềm mới bao gồm iOS 16, watchOS 9 và macOS 13.
                                    </p>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
                <div class="shoesnews__all">
                    <a href="https://fptshop.com.vn/tin-tuc" class="shoesnews__all-tittle">Xem tất cả</a> <i class="fi-rs-angle-right"></i>
                </div>
            </div>
        </div>
    </div>
</div>